<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newtask.NewTaskFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ceiling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ceiling">
        <EditText
            android:id="@+id/new_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_margin="16dp" />
        <TimePicker
            android:id="@+id/new_task_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_margin="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbox_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:scaleX="0.9"
                android:scaleY="0.9" />
            <CheckBox
                android:id="@+id/checkbox_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:scaleX="0.9"
                android:scaleY="0.9" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox_recurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurring"
            android:scaleX="0.9"
            android:scaleY="0.9" />
        <TextView
            android:id="@+id/create_new_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_button"
            android:text="Add New Task"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_margin="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>