<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card"
    android:background="@drawable/list"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/task_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0000">
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_delete_outline_24"
            app:tint="#FFFFFF" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/task_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:alpha="1">
        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:maxLines="1"
            android:textSize="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/card_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/black"
            android:layout_toEndOf="@id/card_time"
            android:layout_above="@id/card_title"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/card_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Su Mo Tu We Th Fr Sa"
            android:layout_above="@id/card_title"
            android:layout_toEndOf="@id/card_status"/>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxLines="1"
            android:textSize="20dp"
            android:layout_toEndOf="@id/card_status"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/card_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_title"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
