<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card"
    android:background="@drawable/list"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/task_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/teal_200"
            android:layout_toStartOf="@id/delete_icon"/>
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_delete_outline_24"
            app:tint="@color/red" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/task_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:maxLines="1"
            android:textSize="40sp"
            android:layout_marginStart="@dimen/card_time_marginLeft"
            android:layout_marginEnd="@dimen/card_time_marginRight"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/card_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/black"
            android:layout_toEndOf="@id/card_time"
            android:layout_above="@id/card_title"
            android:layout_marginEnd="@dimen/card_status_marginRight"/>
        <TextView
            android:id="@+id/card_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Su Mo Tu We Th Fr Sa"
            android:layout_above="@id/card_title"
            android:layout_toEndOf="@id/card_status"/>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_toEndOf="@id/card_status"
            android:layout_centerVertical="true"/>
        <Switch
            android:id="@+id/card_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_title"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/card_toggle_marginRight"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
